
body {
    height: 100vh;
    margin: 0;
    padding: 0;
}

.container {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr 1fr;
    grid-template-rows: 50px 900px 50px;
    grid-template-areas: 
    "navbar navbar navbar navbar"
    "blog blog blog blog"
    "footer footer footer footer"
    ;
    background-image: url(https://images.unsplash.com/photo-1508717272800-9fff97da7e8f?ixid=MXwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHw%3D&ixlib=rb-1.2.1&auto=format&fit=crop&w=1651&q=80);
    background-repeat: no-repeat;
    background-size: cover;
    background-position: center;
}

#navbar {
    grid-area: navbar;
}
#blog {
    grid-area: blog;
}
#foot {
    grid-area: footer;
}

.box {
    border: 1px solid blue;
}

.main-nav {
    position: fixed;
    top: 0;
    right: 0;
    width: 100%;
    height: 55px;
    overflow: auto;
    background-color: black;
}

.navbar {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.navbar li {
    list-style-type: none;
    display: inline;
    font-family: 'Gravitas One';
    font-style: normal;
    font-weight: 400;
    font-size: 10px;
    margin: 0 5px;
}

.navbar .nav-item a {
    color: white;
    text-decoration: none;
}

#logo {
    font-family: 'Satisfy';
    font-style: normal;
    font-size: large;
    font-weight: 400;
    color:white;
    text-decoration: none;
    text-shadow: 2px 2px 5px gray;
}

#blogCard {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 100%;
}

.blogContent {
    margin: 0px 10px;
}

.content {
    margin: 0px 10px;
}

.cards {
    display: grid;
    grid-template-columns: 1fr;
    grid-template-rows: 1fr;
    grid-gap: 10px;
    margin: 10px 10px;
}

.card {
    display: grid;
    grid-template-rows: max-content 150px 1fr;
    text-align: left;
    border: 0px solid rgb(196, 196, 199);
    box-shadow: 2px 2px 5px rgb(61, 60, 60);

}

.card img {
    object-fit: cover;
    align-items: center;
    width: 100%;
    height: 100%;
}

.card header {
    text-align: center;
}

#ft {
    width: 100%;
    height: 40px;
    color: black;
}

.footer {
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 15px;
    bottom: 0;
}

.footer a {
    text-decoration: none;
    color: black;
    margin: 0 5px;
}

@media screen and (min-width: 400px) {
    .container {
        display: grid;
        grid-template-columns: 1fr 1fr 1fr 1fr;
        grid-template-rows: 50px 1200px 50px;
        grid-template-areas: 
        "navbar navbar navbar navbar"
        "blog blog blog blog"
        "footer footer footer footer"
        ;
    }

    .navbar li {
        font-size: 15px;
        margin: 0px 10px 0px 10px;
    }

    #logo {
        font-family: 'Satisfy';
        font-style: normal;
        font-size: x-large;
        font-weight: 400;
        color:white;
        text-decoration: none;
    }

    .blogContent {
        margin: 0 25px;
    }
}

@media screen and (min-width: 768px){
    .blogContent {
        margin: 0 60px;
    }
    
    .cards {
        display: grid;
        grid-template-columns: 1fr;
        grid-template-rows: 1fr;
        grid-gap: 10px;
        margin: 10px 100px;
    }

    .card {
        display: grid;
        grid-template-rows: max-content 150px 1fr;
        text-align: left;
        border: 0px solid rgb(196, 196, 199);
        box-shadow: 2px 2px 5px rgb(61, 60, 60);
    }

    .navbar li {
        font-size: 15px;
        margin: 0px 40px 0px 40px;
    }
}


@media screen and (min-width: 1000px){
    .blogContent {
        margin: 0 85px;
    }
    
    .cards {
        display: grid;
        grid-template-columns: 1fr;
        grid-template-rows: 1fr;
        grid-gap: 10px;
        margin: 10px 200px;
    }

    .card {
        display: grid;
        grid-template-rows: max-content 150px 1fr;
        text-align: left;
        border: 0px solid rgb(196, 196, 199);
        box-shadow: 2px 2px 5px rgb(61, 60, 60);
    }


    .navbar li {
        font-size: 15px;
        margin: 0px 50px 0px 50px;
    }
}